#!/usr/bin/env bash

# source file
. /etc/default/kafka-offset-monitor

# Setting JAVA_OPTS
# -----------------
export JAVA_OPTS="-server -Dlog4j.configuration=file:conf/log4j.properties $JAVA_OPTS"

java $JAVA_OPTS -cp "lib/*" \
            com.quantifind.kafka.offsetapp.OffsetGetterWeb \
            --zk $ZK_CLUSTER \
            --port $PORT \
            --refresh $REFRESH_INTERVAL \
            --retain $RETAIN_DURATION $@